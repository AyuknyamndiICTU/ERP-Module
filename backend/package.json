{
  "name": "educational-erp-backend",
  "version": "1.0.0",
  "description": "Backend API for Educational ERP System",
  "main": "src/server.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node src/server.js",
    "dev:simple": "cross-env NODE_ENV=development node src/server.js",
    "dev": "cross-env NODE_ENV=development nodemon --watch src --exec \"node src/server.js\" --delay 500ms",
    "dev:inspect": "cross-env NODE_ENV=development nodemon --inspect --watch src --exec \"node src/server.js\" --delay 500ms",
    "dev:legacy": "cross-env NODE_ENV=development nodemon --legacy-watch src/server.js",
    "debug": "cross-env NODE_ENV=development node --inspect src/server.js",
    "build": "echo 'Backend build completed'",
    "test": "NODE_ENV=test jest --watchAll=false --passWithNoTests",
    "test:watch": "NODE_ENV=test jest --watchAll --passWithNoTests",
    "test:coverage": "NODE_ENV=test jest --coverage --passWithNoTests",
    "migrate": "node src/database/migrate.js",
    "seed": "node src/database/seed.js",
    "db:reset": "npm run migrate && npm run seed",
    "db:setup": "node src/database/init.js",
    "lint": "eslint src/ --ext .js --quiet",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\"",
    "docs": "swagger-jsdoc -d swaggerDef.js src/routes/*.js -o swagger.json",
    "clean": "rm -rf node_modules package-lock.json && npm install"
  },
  "keywords": [
    "erp",
    "educational",
    "api",
    "backend",
    "nodejs",
    "express"
  ],
  "author": "Software Engineering Students Team",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "connect-redis": "^7.1.0",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.4",
    "nodemailer-express-handlebars": "^6.1.0",
    "pdf-lib": "^1.17.1",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "redis": "^4.6.7",
    "sequelize": "^6.32.1",
    "stripe": "^13.5.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "cross-env": "^10.0.0",
    "eslint": "^8.46.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.28.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.1",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
